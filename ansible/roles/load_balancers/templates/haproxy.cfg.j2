global
        log 127.0.0.1   local0
        log 127.0.0.1   local1 notice
        #log loghost    local0 info
        maxconn 4096
        #debug
        #quiet
        user haproxy
        group haproxy

defaults
        log     global
        mode    http
        option  httplog
        option  dontlognull
        retries 3
        redispatch
        maxconn 2000
        contimeout      5000
        clitimeout      50000
        srvtimeout      50000

listen webfarm lb.slash16.local:80
       mode http
       stats enable
       stats auth {{stats_user}}:{{stats_password}}
       balance roundrobin
       cookie JSESSIONID prefix
       option httpclose
       option forwardfor
       server webA web1.slash16.local:80 cookie A check
       server webB web2.slash16.local:80 cookie B check
