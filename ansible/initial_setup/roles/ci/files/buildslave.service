[Unit]
Description=Buildbot Worker service
Wants=network.target
After=network.target

[Service]
Type=forking
PIDFile=/home/buildbot/ci/slave/twistd.pid
WorkingDirectory=/home/buildbot/ci
ExecStart=/usr/bin/buildslave start slave
ExecReload=/usr/bin/buildslave restart slave
ExecStop=/usr/bin/buildslave stop slave
Restart=always
User=buildbot

[Install]
WantedBy=buildbot.service
