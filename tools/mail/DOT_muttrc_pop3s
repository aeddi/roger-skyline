
set from=<user>@slash16.local
set use_from=yes

set header_cache=/home/<user>/.cache/mutt
set message_cachedir=/home/<user>/.cache/mutt

# Automatically log in to this mailbox at startup
set spoolfile="pop3s://<user>:<userpw>@mail.slash16.local/INBOX"
# # Define the = shortcut, and the entry point for the folder browser (c?)
set folder="pop3s://mail.slash16.local/INBOX"
set record="=Sent"
set postponed="=Drafts"

