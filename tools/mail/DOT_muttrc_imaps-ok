
set from=<user>@slash16.local
set use_from=yes

# Automatically log in to this mailbox at startup
set spoolfile="imaps://<user>:<userpw>@mail.slash16.local/INBOX"
# # Define the = shortcut, and the entry point for the folder browser (c?)
set folder="imaps://mail.slash16.local/INBOX"
set record="=Sent"
set postponed="=Drafts"

